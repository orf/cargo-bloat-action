{
  "name": "cargo-bloat-action",
  "version": "0.0.0",
  "private": true,
  "description": "Track bloat in your Rust projects",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "build-release": "npm run build && npm run pack",
    "all": "npm run build && npm run format && npm run lint && npm run pack",
    "add-release": "git add dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orf/cargo-bloat-action.git"
  },
  "pre-commit": [
    "build-release",
    "add-release"
  ],
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "orf",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/exec": "^1.0.3",
    "@actions/github": "^2.1.1",
    "@actions/io": "^1.0.2",
    "axios": "^0.19.2",
    "diff": "^4.0.2",
    "filesize": "^6.1.0",
    "lodash.set": "^4.3.2",
    "lodash.sortby": "^4.7.0",
    "text-table": "^0.2.0",
    "treeify": "^1.1.0"
  },
  "devDependencies": {
    "@types/lodash.set": "^4.3.6",
    "pre-commit": "^1.2.2",
    "@types/diff": "^4.0.2",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/text-table": "^0.2.1",
    "@types/treeify": "^1.0.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "@zeit/ncc": "^0.22.1",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.8.2",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  }
}
